@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Sử dụng layout chung
}

<div>
    <h3>Lượt Khám Theo Tháng</h3>
    <canvas id="luotKhamChart" width="400" height="200"></canvas>
</div>

<div>
    <h3>Doanh Thu Theo Tháng</h3>
    <canvas id="doanhThuChart" width="400" height="200"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Lấy dữ liệu từ ViewBag
    var luotKhamData = @Html.Raw(Json.Serialize(ViewBag.listTKLK));
    var doanhThuData = @Html.Raw(Json.Serialize(ViewBag.listTKDT));

    // Tạo mảng tháng
    var thangLabels = [];
    for (var i = 1; i <= 12; i++) {
        thangLabels.push(i);
    }

    // Tạo dữ liệu cho biểu đồ lượt khám
    var luotKhamChartData = {
        labels: thangLabels,
        datasets: [{
            label: 'Lượt Khám',
            data: luotKhamData,
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1
        }]
    };

    // Tạo biểu đồ lượt khám
    var ctxLuotKham = document.getElementById('luotKhamChart').getContext('2d');
    var luotKhamChart = new Chart(ctxLuotKham, {
        type: 'bar',
        data: luotKhamChartData,
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Giá trị'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Tháng'
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Thống Kê Lượt Khám Theo Tháng'
                }
            }
        }
    });
    

    // Tạo dữ liệu cho biểu đồ doanh thu
    var doanhThuChartData = {
        labels: thangLabels,
        datasets: [{
            label: 'Doanh Thu',
            data: doanhThuData,
            backgroundColor: 'rgba(255, 99, 132, 0.2)',
            borderColor: 'rgba(255, 99, 132, 1)',
            borderWidth: 1
        }]
    };

    // Tạo biểu đồ doanh thu
    var ctxDoanhThu = document.getElementById('doanhThuChart').getContext('2d');
    var doanhThuChart = new Chart(ctxDoanhThu, {
        type: 'bar',
        data: doanhThuChartData,
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Giá trị'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Tháng'
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Thống Kê Doanh Thu Theo Tháng'
                }
            }
        }
    });
</script>